<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:gravity="center_horizontal" >
    
    <com.example.earthdefenseprogram.StarySurface
        android:id="@+id/menuView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <Button
        android:id="@+id/Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Start Game"
        android:visibility="visible" />

        <Button
            android:id="@+id/Instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Start"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:text="Instructions"
            android:visibility="visible" />

        <Button
            android:id="@+id/Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Instructions"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Settings"
            android:visibility="visible" />

        <Button
            android:id="@+id/Credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Settings"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Credits"
            android:visibility="visible" />

        <Button
            android:id="@+id/RedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/GreenButton"
            android:layout_toRightOf="@+id/GreenButton"
            android:background="@drawable/reddraw" />

        <Button
            android:id="@+id/GreenButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/greendraw" />

        <Button
            android:id="@+id/BlueButton"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/GreenButton"
            android:layout_toLeftOf="@id/GreenButton"
            android:background="@drawable/bluedraw" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:text="Earth Defense Program"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#00FF00"
            android:textSize="30sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/pickShip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Title"
            android:layout_centerHorizontal="true"
            android:text="PICK A SHIP"
            android:textColor="#00FF00"
            android:textSize="28sp"
            android:visibility="visible" />

</RelativeLayout>
